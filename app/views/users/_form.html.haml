= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :id
    = f.text_field :id
  .field
    = f.label :nickname
    = f.text_field :nickname
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :family_name
    = f.text_field :family_name
  .field
    = f.label :birth_date
    = f.date_select :birth_date
  .actions
    = f.submit 'Save'
